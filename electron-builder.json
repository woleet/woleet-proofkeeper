{
  "productName": "woleet-gui",
  "directories": {
    "output": "release/"
  },
    "files": [
        "**/*",
        "!dist/woleet-gui/assets/bin${/*}",
        "!*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!.angular-cli.json",
        "!tsconfig.json",
        "!tslint.json",
        "!*.sh"
    ],
  "win": {
    "icon": "./src/assets/images/woleet.png",
    "target": [ "portable" ],
    "files": [ "dist/woleet-gui/assets/bin/windows" ]
  },
  "mac": {
    "icon": "./src/assets/images/woleet.png",
    "target": [ "dmg" ],
    "files": [ "dist/woleet-gui/assets/bin/darwin" ]
  },
  "linux": {
    "icon": "./src/assets/images/woleet.png",
    "target": [ "AppImage" ],
    "files": [ "dist/woleet-gui/assets/bin/linux" ]
  }
}
