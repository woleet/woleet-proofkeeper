{
  "name": "ProofKeeper",
  "version": "0.2.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "ng": "npx ng",
    "start": "npm run electron:serve",
    "clean": "rm -rf release dist node_modules",
    "angular:buildandwatch": "ng build --watch",
    "build": "npm run electron:TStoJS && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "electron:serve": "npm run electron:TStoJS && rm -rf dist && npm-run-all -p angular:buildandwatch electron:serveandreload",
    "electron:serveandreload": "wait-on dist/ProofKeeper/index.html && electron . --liveenv",
    "electron:TStoJS": "node postinstall && npx tsc --target 'ES5' --typeRoots 'node_modules/@types' --moduleResolution 'node' --lib 'DOM,ES5,ES6' electron.ts",
    "electron:linux": "npm run build:prod && npm run electron:linux-nobuild",
    "electron:linux-nobuild": "chmod +x dist/ProofKeeper/assets/bin/linux/woleet-cli && npx electron-builder build --linux",
    "electron:mac": "npm run build:prod && npm run electron:mac-nobuild",
    "electron:mac-nobuild": "chmod +x dist/ProofKeeper/assets/bin/darwin/woleet-cli && npx electron-builder build --mac",
    "electron:windows": "npm run build:prod && npm run electron:windows-nobuild",
    "electron:windows-nobuild": "npx electron-builder build --windows"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.6",
    "@angular/animations": "^8.2.8",
    "@angular/cdk": "^8.2.2",
    "@angular/cli": "^8.3.6",
    "@angular/common": "^8.2.8",
    "@angular/compiler": "^8.2.8",
    "@angular/compiler-cli": "^8.2.8",
    "@angular/core": "^8.2.8",
    "@angular/forms": "^8.2.8",
    "@angular/http": "^7.2.15",
    "@angular/language-service": "^8.2.8",
    "@angular/material": "^8.2.2",
    "@angular/platform-browser": "^8.2.8",
    "@angular/platform-browser-dynamic": "^8.2.8",
    "@angular/router": "^8.2.8",
    "@types/loglevel": "^1.6.3",
    "@types/node": "^12.7.8",
    "codelyzer": "^5.1.2",
    "core-js": "^3.2.1",
    "electron": "^6.0.10",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.5.0",
    "electron-settings": "^3.2.0",
    "electron-store": "^5.0.0",
    "hammerjs": "^2.0.8",
    "loglevel": "^1.6.4",
    "material-design-icons": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postinstall": "^0.5.1",
    "rxjs": "^6.5.3",
    "ts-node": "^8.4.1",
    "tslint": "~5.20.0",
    "typescript": "3.5.3",
    "wait-on": "^3.3.0",
    "zone.js": "^0.10.2"
  },
  "dependencies": {
    "npm-check-updates": "^3.1.23"
  }
}
