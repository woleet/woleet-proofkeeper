{
  "name": "ProofKeeper",
  "version": "0.1.1",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "ng": "npx ng",
    "start": "npm run electron:serve",
    "clean": "rm -rf release dist node_modules",
    "angular:buildandwatch": "ng build --watch",
    "build": "npm run electron:TStoJS && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "electron:serve": "npm run electron:TStoJS && rm -rf dist && npm-run-all -p angular:buildandwatch electron:serveandreload",
    "electron:serveandreload": "wait-on dist/ProofKeeper/index.html && electron . --liveenv",
    "electron:TStoJS": "node postinstall && npx tsc --target 'ES5' --typeRoots 'node_modules/@types' --moduleResolution 'node' --lib 'DOM,ES5,ES6' electron.ts",
    "electron:linux": "npm run build:prod && chmod +x dist/ProofKeeper/assets/bin/linux/woleet-cli && npx electron-builder build --linux",
    "electron:mac": "npm run build:prod && chmod +x dist/ProofKeeper/assets/bin/darwin/woleet-cli && npx electron-builder build --mac",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.11.4",
    "@angular/animations": "^7.1.4",
    "@angular/cdk": "^7.2.0",
    "@angular/cli": "^7.1.4",
    "@angular/common": "^7.1.4",
    "@angular/compiler": "^7.1.4",
    "@angular/compiler-cli": "^7.1.4",
    "@angular/core": "^7.1.4",
    "@angular/forms": "^7.1.4",
    "@angular/http": "^7.1.4",
    "@angular/language-service": "^7.1.4",
    "@angular/material": "^7.2.0",
    "@angular/platform-browser": "^7.1.4",
    "@angular/platform-browser-dynamic": "^7.1.4",
    "@angular/router": "^7.1.4",
    "@types/loglevel": "^1.5.3",
    "@types/node": "^10.12.18",
    "codelyzer": "^4.5.0",
    "core-js": "^2.6.1",
    "electron": "^3.0.14",
    "electron-builder": "^20.38.4",
    "electron-reload": "^1.3.0",
    "electron-settings": "^3.2.0",
    "electron-store": "^2.0.0",
    "hammerjs": "^2.0.8",
    "loglevel": "^1.6.1",
    "material-design-icons": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postinstall": "^0.4.2",
    "rxjs": "^6.3.3",
    "ts-node": "~7.0.1",
    "tslint": "~5.11.0",
    "typescript": "^3.1.6",
    "wait-on": "^3.2.0",
    "zone.js": "~0.8.26"
  }
}
