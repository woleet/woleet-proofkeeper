{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "electron.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
